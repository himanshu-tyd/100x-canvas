# Use Node.js 18
FROM node:22-alpine

# Set the working directory
WORKDIR /app

# Copy the backend files
COPY . .

# Install dependencies
RUN pnpm install --frozen-lockfile

# Build the project
RUN pnpm run build

# Expose the port your server runs on
EXPOSE 3001

# Start the backend server
CMD ["node", "dist/index.js"]
