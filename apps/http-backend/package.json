{
  "name": "http-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "pnpm --filter=@repo/db run prisma generate --schema=packages/db/prisma/schema.prisma",
    "build": "tsc -b && pnpm --filter=@repo/backend-common run build && pnpm --filter=@repo/db run build",
    "start": "pnpm --filter=@repo/db run prisma generate && node dist/index.js",
    "dev": "pnpm run build && pnpm run start"
  },
  "dependencies": {
    "@repo/db": "workspace:*",
    "@repo/backend-common": "workspace:*",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.7",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@repo/common": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^18.16.19",
    "rimraf": "^6.0.1"
  },
  "author": "",
  "license": "ISC",
  "description": ""
}